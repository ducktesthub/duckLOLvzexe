-- ğŸ› ï¸ Load thÆ° viá»‡n Rayfield GUI
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- ğŸŒŸ Táº¡o GUI
local Window = Rayfield:CreateWindow({
    Name = "Blox Fruits Auto Farm",
    LoadingTitle = "Auto Farm by ChatGPT",
    LoadingSubtitle = "Rayfield GUI",
    ConfigurationSaving = {Enabled = false}
})

-- ğŸ“‚ Táº¡o Tabs
local AutoFarmTab = Window:CreateTab("Auto Farm", 4483345998)
local VisualTab = Window:CreateTab("Aura áº¢o", 4483345998)

-- ğŸ”˜ Biáº¿n Ä‘iá»u khiá»ƒn
_G.AutoFarm = false
_G.UseAura = false
_G.SelectedWeapon = "Melee"

-- ğŸ”„ Tá»± Ä‘á»™ng trang bá»‹ vÅ© khÃ­
function equipWeapon()
    local player = game.Players.LocalPlayer
    local backpack = player.Backpack
    for _, tool in pairs(backpack:GetChildren()) do
        if tool:IsA("Tool") and string.find(tool.Name, _G.SelectedWeapon) then
            player.Character.Humanoid:EquipTool(tool)
            return
        end
    end
end

-- âš”ï¸ Auto Attack (Sá»­ dá»¥ng dá»‹ch vá»¥ Remote Ä‘á»ƒ Ä‘Ã¡nh)
function autoAttack()
    while _G.AutoFarm do
        equipWeapon()
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Attack")
        task.wait(0.1)
    end
end

-- âœ¨ Aura áº¢o (Hiá»‡u á»©ng Ã¡nh sÃ¡ng quanh nhÃ¢n váº­t)
function activateAura()
    local character = game.Players.LocalPlayer.Character
    while _G.UseAura do
        local aura = Instance.new("Part")
        aura.Size = Vector3.new(5, 5, 5)
        aura.Shape = Enum.PartType.Ball
        aura.Material = Enum.Material.Neon
        aura.Color = Color3.fromRGB(math.random(100,255), math.random(100,255), math.random(100,255))
        aura.Transparency = 0.5
        aura.Anchored = true
        aura.CanCollide = false
        aura.Position = character.HumanoidRootPart.Position
        aura.Parent = game.Workspace
        game:GetService("Debris"):AddItem(aura, 0.2) -- XÃ³a sau 0.2s Ä‘á»ƒ táº¡o hiá»‡u á»©ng
        task.wait(0.1)
    end
end

-- ğŸ† Báº­t/Táº¯t Auto Farm
AutoFarmTab:CreateToggle({
    Name = "Auto Farm Level",
    CurrentValue = false,
    Flag = "AutoFarm",
    Callback = function(value)
        _G.AutoFarm = value
        if value then
            spawn(autoAttack)
        end
    end
})

-- âœ¨ Báº­t/Táº¯t Aura áº¢o
VisualTab:CreateToggle({
    Name = "Báº­t Aura áº¢o",
    CurrentValue = false,
    Flag = "UseAura",
    Callback = function(value)
        _G.UseAura = value
        if value then
            spawn(activateAura)
        end
    end
})

-- âœ… HoÃ n táº¥t
Rayfield:LoadConfiguration()
